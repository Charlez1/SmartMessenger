<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartMessenger" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="GlobalAuthTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_width">0dp</item>

        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/field_color</item>

        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>


        <item name="boxCornerRadiusBottomStart">@dimen/box_field_corners</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_field_corners</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_field_corners</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_field_corners</item>
    </style>

    <style name="GlobalAuthTextInputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColorHint">@color/field_color</item>

        <item name="android:lines">1</item>

    </style>

    <style name="GlobalAuthIcons" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
    </style>

</resources>